<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_PATTERN_FILE"
              value="%d{MM-dd@HH:mm:ss} %-5p (%13F:%L) %3x - %m%n" />
    <property name="LOG_PATTERN_CONSOLE"
              value="%d{yy-MM-dd HH:mm:ss:SSS} %5p %t %c{2}:%L - %m%n" />

<!--    <property name="FILE_PATH_DEBUG" value="./logs/debug/%d{yyyy-MM-dd}.%i.log" />-->

    <property name="FILE_PATH_WARN" value="./logs/warn/%d{yyyy-MM-dd}.%i.log" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>

            <pattern>${LOG_PATTERN_CONSOLE}</pattern>
        </encoder>
    </appender>

    <appender name="rollingFileWarn"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${FILE_PATH_WARN}
            </fileNamePattern>

            <maxHistory>30</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <pattern>${LOG_PATTERN_FILE}</pattern>
        </encoder>
    </appender>

    <root level="TRACE"  >
        <appender-ref ref="console" />
    </root>
    <root level="WARN"  >
        <appender-ref ref="rollingFileWarn" />
    </root>
</configuration>